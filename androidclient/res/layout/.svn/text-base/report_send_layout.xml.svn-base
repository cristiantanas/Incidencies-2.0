<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	>
	<LinearLayout
	  android:layout_width="fill_parent"
	  android:layout_height="fill_parent"
	  android:orientation="vertical">
	  
	  <TextView
	  	android:id="@+id/station_info"
	  	android:layout_width="fill_parent"
	  	android:layout_height="wrap_content"
	  	android:gravity="center_horizontal"
	  	android:layout_marginTop="6dip"
	  	android:layout_marginBottom="6dip"
	  	android:textSize="20sp"
	  	android:textColor="@android:color/white"
  		android:singleLine="true"
  		android:ellipsize="none"
	  	/>
	  
	  <TextView
	  	android:layout_width="fill_parent"
	  	android:layout_height="wrap_content"
	  	android:text="@string/direction_label"/>
	  <Spinner
	  	android:id="@+id/direction_spinner"
	  	android:layout_width="fill_parent"
	  	android:layout_height="wrap_content"
	  	android:layout_marginBottom="10dip"
	  	android:prompt="@string/direction_label"/>
	  
	  <TextView
	  	android:layout_width="fill_parent"
	  	android:layout_height="wrap_content"
	  	android:text="@string/report_class_label"
	  	/>
	  <Spinner
	  	android:id="@+id/class_spinner"
	  	android:layout_width="fill_parent"
	  	android:layout_height="wrap_content"
	  	android:layout_marginBottom="10dip"
	  	android:prompt="@string/report_class_label"
	  	/>
	  	
	  <TextView
	  	android:layout_width="fill_parent"
	  	android:layout_height="wrap_content"
	  	android:text="@string/report_severity_label"
	  	/>
	  <Spinner
	  	android:id="@+id/severity_spinner"
	  	android:layout_width="fill_parent"
	  	android:layout_height="wrap_content"
	  	android:layout_marginBottom="15dip"
	  	android:prompt="@string/report_severity_label"
	  	/>
	  
	  <EditText
	  	android:id="@+id/optional_description"
	  	android:layout_width="fill_parent"
	  	android:layout_height="wrap_content"
	  	android:layout_marginBottom="10dip"
	  	android:hint="@string/description_label"
	  	android:maxLength="100"
	  	/>
	  	
	  <TextView
	  	android:id="@+id/date_time_information"
	  	android:layout_width="fill_parent"
	  	android:layout_height="wrap_content"
	  	android:layout_marginBottom="10dip"
	  	/>
	  	
	  <RelativeLayout
	  	android:layout_width="fill_parent"
	  	android:layout_height="fill_parent">
	  	<Button
	  		android:id="@+id/submit_button"
	  		android:layout_width="wrap_content"
	  		android:layout_height="wrap_content"
	  		android:layout_marginBottom="10dip"
	  		android:text="@string/submit_label"
	  		/>
	  	<Button
	  		android:id="@+id/cancel_button"
	  		android:layout_width="wrap_content"
	  		android:layout_height="wrap_content"
	  		android:layout_alignTop="@id/submit_button"
	  		android:layout_toRightOf="@id/submit_button"
	  		android:text="@string/cancel_label"
	  		/>
	  </RelativeLayout>
	  	
	</LinearLayout>
</ScrollView>