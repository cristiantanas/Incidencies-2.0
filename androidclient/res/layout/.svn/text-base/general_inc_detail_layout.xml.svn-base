<?xml version="1.0" encoding="utf-8"?>
<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">
  
  <RelativeLayout
  	android:orientation="horizontal"
  	android:layout_width="fill_parent"
  	android:layout_height="wrap_content"
  	android:padding="6dip">
  
  	<TextView
  		android:id="@+id/title"
		android:text="@string/general_incident_label"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:textSize="20sp"
		android:textColor="@android:color/white"
		android:singleLine="true"
		android:ellipsize="none"/>
  	
  	<View
		android:id="@+id/hor_line_1"
		android:layout_width="fill_parent"
		android:layout_height="2dip"
		android:layout_below="@id/title"
		android:layout_marginTop="4dip"
		android:background="?android:attr/listDivider" />
  		
  	<TextView
		android:id="@+id/general_inc_description"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/hor_line_1"
		android:layout_marginTop="4dip"
		android:textSize="18sp" />
  	<TextView
		android:id="@+id/general_inc_time_detail"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/general_inc_description"
		android:layout_marginTop="6dip"
		android:textSize="12sp"
		android:textColor="#E6E6FA"
		android:textStyle="italic" />
		
	<LinearLayout
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/general_inc_time_detail"
		android:layout_marginTop="4dip"
		android:padding="30dip">
		
		<Button
			android:id="@+id/general_inc_confirm_button"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:minWidth="150dip"
			android:text="@string/detail_confirmation_label" />
			
		<Button
			android:id="@+id/general_inc_map_button"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="6dip"
			android:gravity="center"
			android:minWidth="150dip"
			android:text="@string/detail_map_label" />
			
		<Button
			android:id="@+id/general_inc_comments_button"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="6dip"
			android:gravity="center"
			android:minWidth="150dip"
			android:text="@string/detail_comments_label" />
		
	</LinearLayout>
	
  </RelativeLayout>
  
</ScrollView>
